.brandNameInput {
    /* float: left; *//* display:inline;  */
    height: 45px;
    line-height: 45px;
    font-size: 18px;
    text-align: center;
    position: absolute;
    width: 100%;
    /* width: 200px; *//* margin:0 82px 0 0; */
}

.bnh {
    z-index: -1;
    position: absolute;
    text-align: center;
    width: 200px;
    font-size: 15px;
    color: #848484;
    font-family: 'PingFang-SC-Regular';
    font-weight: lighter;
    left: 50%;
    top: 40%;
    margin-left: -100px;
    transition: all 0.5s cubic-bezier(0.5, 0, 0, 1);
    bottom: 10px;
}

.bnc {
    margin-left: -55px;
    left: 0;
    top: 0;
    font-size: 10px;
}

.brandNameInputStyle {
    text-align: center;
    font-size: 20px;
    color: #848484;
    font-family: 'PingFang SC';
    font-weight: lighter;
}

.wrap {
    position: relative;
}

.wrap .btnSearch {
    position: relative;
    border: solid #fcd300 1px;
    border-radius: 25px;
    background-color: #fcd300;
    height: 50px;
    color: #333;
    font-family: 'PingFang-SC-Bold';
    font-size: 18px;
    overflow: hidden;
    z-index: 11;
    transition: all 0.5s cubic-bezier(0.5, 0, 0, 1);
}

.clearbox {
    position: absolute;
    overflow: hidden;
    height: 100%;
    right: 30px;
    top: 0;
    width: 45px;
    transition: all 0.3s;
}

.ncclear {
    position: absolute;
    z-index: 2;
    height: 40px;
    width: 40px;
    line-height: 20px;
    right: 40;
    top: 50%;
    margin-top: -5px;
    text-align: center;
    opacity: 0;
    transition: all 0.3s;
}

.ncclear.bncf {
    opacity: 1;
    transform: rotate(45deg);
}

.ncclear.down {
    right: 10px;
}

.finishbox {
    position: absolute;
    overflow: hidden;
    height: 35px;
    line-height: 43px;
    right: 0;
    bottom: 0;
    opacity: 1;
    z-index: 1;
    width: 30px;
    transition: all 0.3s;
}

.finishbox .finish {
    font-size: 14px;
    color: #666;
    opacity: 0;
    transition: all 0.3s;
}

.finishbox .finish.bncf {
    opacity: 1;
}

.brandNameInput.input {
    z-index: 9;
}

.input.bncf {
    width: 70%;
}

.btnSearch::after {
    border: none;
}

.wave {
    position: absolute;
    top: 50%;
    left: 50%;
    background-color: #fff;
    border: none;
    opacity: 0;
}

.button-hover .afterwave {
    animation: click-wave 0.5s ease-out;
}

.history {
    position: absolute;
    width: 100%;
    z-index: 9;
    margin-top: 10px;
    transition: top 0.5s cubic-bezier(0.5, 0, 0, 1), opacity 0.7s cubic-bezier(1, 0, 0.3, 1);
}

.history .title {
    height: 40px;
    line-height: 40px;
    width: 100%;
    font-size: 14px;
    padding: 0 3px;
}

.history .title text {
    float: left;
}

.history .title image {
    float: right;
    height: 18px;
    width: 18px;
    margin-top: 11px;
}

.cb {
    display: block;
    clear: both;
}

.history .tab {
    float: left;
    margin: 10px;
    margin-left: 0;
    padding: 0 10px;
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    color: #666;
    border-radius: 10px;
    border: 1px #ccc solid;
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.5, 0, 0, 1),
                opacity 1.5s cubic-bezier(0.5, 0, 0, 1),
                font-size 1.5s cubic-bezier(0.5, 0, 0, 1);
}

.history .tab.ani {
    margin: 10px !important;
    transform: translateY(0px) !important;
    margin-left: 0 !important;
    opacity: 1;
}

.suggest {
    position: absolute;
    display: none;
    width: 100%;
    z-index: 10;
    top: 45px;
    background-color: red;
    transition: all 0.5s cubic-bezier(0.5, 0, 0, 1);
}

.tip {
    height: 30px;
    line-height: 30px;
    color: #ccc;
    width: 100%;
    font-size: 12px;
    text-align: center;
}

.brandNameInput.input.down.bncf {
    width: 70%;
}

.down.clearbox {
    right: 0;
}

.down.finishbox {
    opacity: 0;
}

@keyframes click-wave {
    0% {
        width: 0;
        height: 0;
        border-radius: 0;
        opacity: 0.7;
    }

    100% {
        width: 250px;
        height: 250px;
        border-radius: 125px;
        margin-left: -125px;
        margin-top: -125px;
        opacity: 0;
    }
}
