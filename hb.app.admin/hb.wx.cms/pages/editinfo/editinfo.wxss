page {
    background: #f6f6f6;
    width: 100%;
}
view.header {
    height: 50px;
    position: fixed;
    top: 0;
    width: 100%;
    line-height: 50px;
    background: #fcd300;
}
.header input{
    display: inline-block;
    border-radius: 15px;
    height: 30px;
    background-color: #fff;
    width: 100%;
    text-align: center;
}
view.container {
    padding: 50px 0;
}
view.container view.list {
    padding: 10px;
    height: 100px;
    background: #fff;
    width: 90%;
    margin: 10px 5% 0;
    border:none;
}