page {
    height: 100%;
    overflow: hidden;
    position: relative;
}

.clearfix {
    overflow: auto;
    _height: 1%;
}

.container {
    position: absolute;
    height: 100%;
    width: 100%;
    z-index: 2;
}

.container form {
    position: absolute;
    z-index: 10;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.5, 0, 0, 1);
}

.bg {
    position: absolute;
    bottom: 0;
    background-image: url(http://ov0qsrow6.bkt.clouddn.com/img/icon/littleicon4.png);
    background-position: center bottom;
    background-size: 100%;
    background-repeat: no-repeat;
    overflow: hidden;
    height: 100%;
    width: 100%;
}

.wrap {
    width: 78.8%;
    margin: auto;
}

.wrap .input input {
    text-align: left;
    padding-left: 15px;
    font-size: 16px;
    padding-top: 15px;
    z-index: 5;
}

.brandName {
    position: relative;
    /* display: flex; *//* justify-content: center; */
    z-index: 99999;
    margin-top: 20px;
    height: 45px;
    background-color: white;
    border-bottom: solid #e1e1e1 0.5px;
}

